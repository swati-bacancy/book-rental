e<div class="col-md-6"> 
  <div class="boxed-section request-form"> 
    <h2 class="section-title text-center">View Addresses</h2>
    <table border="1">
      <tr>
        <th>Full Name:</th>
        <th>Address Line 1</th>
        <th>Address Line 2</th>
        <th>city</th>
        <th>state</th>
        <th>Pincode</th>
        <th colspan="3">operation</th>
        <th>Confirm order</th>
     </tr>
     <% @addresses.each do |address| %>
    
      <tr>
        <td><%= address.full_name%></td>
        <td><%= address.address_line1%></td>
        <td><%= address.address_line2%></td>
        <td><%= address.city%></td>
        <td><%= address.state%></td>
        <td><%= address.pincode%></td>
        <td><%= link_to "show", address_path(address)%></td>
        <td><%= link_to "edit", edit_address_path(address)%></td>
        <td><%= link_to "delete", address_path(address), method: :delete %></td>
        <td><%= link_to "confirm order", book_address_confirm_order_path(@book,address) %></td>
      </tr>
     <%end%>
    </table>
  </div>
</div>
